<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kd8bny.maintenanceman.ui.fragment_add_vehicle"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_row="0"
        android:layout_column="0">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/spec_make"
            android:id="@+id/spec_make"/>
        <EditText
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:id="@+id/val_spec_make"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_row="1"
        android:layout_column="0">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/spec_model"/>
        <EditText
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:id="@+id/val_spec_model"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_row="2"
        android:layout_column="0" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/spec_engine"
            android:id="@+id/spec_engine"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:id="@+id/val_spec_engine"
            android:hint="@string/hint_spec_engine"
            android:layout_row="4"
            android:layout_column="1" />
    </LinearLayout>

</GridLayout>