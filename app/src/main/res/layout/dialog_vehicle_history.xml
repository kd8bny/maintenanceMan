<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/val_spec_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_vertical_space"
        android:textSize="@dimen/header_font"
        android:background="@color/primary"
        android:textColor="@color/header"

        android:text="title"/>

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_header"
        android:layout_below="@+id/val_spec_event">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Completed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:text="   on   "/>

        <TextView
            android:id="@+id/val_spec_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="   at   "/>

        <TextView
            android:id="@+id/val_spec_odo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="odo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=" mi"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_header"
        android:layout_below="@+id/date">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: $"/>

        <TextView
            android:id="@+id/val_spec_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:text="date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cost"
        android:padding="@dimen/padding_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment: "/>

        <TextView
            android:id="@+id/val_spec_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blah"/>
    </LinearLayout>
</RelativeLayout>