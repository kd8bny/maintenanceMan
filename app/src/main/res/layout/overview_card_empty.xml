<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    card_view:cardElevation="10sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carPic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:elevation="50sp"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_add"
            android:background="@color/color_primary_dark"
            android:tint="@android:color/white"/>


        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/carPic"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:text="DB Empty"

            android:textColor="@color/color_accent"
            android:textSize="20sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
