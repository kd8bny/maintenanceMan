<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    card_view:cardElevation="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carPic"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"

            android:gravity="start"
            android:layout_alignParentStart="true"
            android:src="@drawable/np_car"
            android:padding="8dp"
            android:background="@color/accent"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/carPic"
            android:gravity="center_horizontal"

            android:singleLine="true"

            android:background="@color/accent"
            android:text="@string/no_data"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_font"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year"
            android:layout_toEndOf="@+id/carPic"
            android:gravity="center_horizontal"
            android:padding="@dimen/content_vertical_space"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:maxEms="3"
            android:minEms="3"

            android:text="type"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"/>

        <LinearLayout
            android:id="@+id/linlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/carPic"
            android:layout_below="@+id/type"
            android:gravity="center_horizontal"
            android:padding="@dimen/content_vertical_space">

            <TextView
                android:id="@+id/make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"

                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:maxEms="3"
                android:minEms="3"

                android:text="@string/no_data"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/field_font"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"

                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:maxEms="3"
                android:minEms="3"

                android:text="@string/no_data"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/field_font"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
