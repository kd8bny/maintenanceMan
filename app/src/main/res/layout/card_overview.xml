<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    card_view:cardElevation="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carPic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:elevation="50sp"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:src="@drawable/np_car"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/accent"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/carPic"
            android:layout_gravity="end"
            android:text="@string/no_data"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/header_font"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/carPic"
            android:layout_below="@+id/year"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin">

            <TextView
                android:id="@+id/make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="2"

                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:maxEms="3"
                android:minEms="3"

                android:text="@string/no_data"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/field_font"/>

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"

                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:maxWidth="70dp"

                android:text="@string/no_data"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/field_font"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
