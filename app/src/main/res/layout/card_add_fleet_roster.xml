<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/circle"
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:elevation="2sp"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/circle">
        </ImageView>

        <ImageView
            android:id="@+id/icon"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:layout_centerVertical="true"

            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerInside"
            android:elevation="4sp"


            android:src="@drawable/ic_event"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:layout_gravity="end"

            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="@dimen/content_vertical_space"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/header_sub_font"/>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_below="@+id/category"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginTop="@dimen/content_vertical_space"
            android:layout_marginBottom="@dimen/content_vertical_space"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"

            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
