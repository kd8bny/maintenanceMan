<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_sub_font"
            android:padding="@dimen/padding_header"

            android:text="title"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_below="@+id/category"
            android:layout_toEndOf="@+id/enginePic"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginTop="@dimen/content_vertical_space"
            android:layout_marginBottom="@dimen/content_vertical_space"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"

            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
