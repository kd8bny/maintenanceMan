<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/circle"
        android:layout_height="56dp"
        android:layout_width="56dp"
        android:elevation="2sp"
        android:layout_marginTop="@dimen/content_vertical_space"
        android:layout_marginBottom="@dimen/content_vertical_space"
        android:layout_marginStart="@dimen/header_horizontal_margin"
        android:layout_marginEnd="@dimen/header_horizontal_margin"
        android:background="@drawable/circle">
    </ImageView>

    <ImageView
        android:id="@+id/enginePic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerInside"
        android:elevation="4sp"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/content_vertical_space"
        android:layout_marginStart="@dimen/header_horizontal_margin"
        android:layout_marginEnd="@dimen/header_horizontal_margin"
        android:src="@drawable/ic_event"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:tint="@android:color/white"/>


    <TextView
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/enginePic"
        android:layout_gravity="end"

        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="@dimen/content_vertical_space"
        android:layout_marginStart="@dimen/header_horizontal_margin"
        android:layout_marginEnd="@dimen/header_horizontal_margin"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/header_sub_font"/>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event"
        android:layout_toEndOf="@+id/enginePic"
        android:layout_marginStart="@dimen/header_horizontal_margin"
        android:layout_marginTop="@dimen/content_vertical_space"
        android:layout_marginBottom="@dimen/content_vertical_space">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:maxEms="8"
            android:minEms="8"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"

            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"/>

        <TextView
            android:id="@+id/val_spec_odo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"

            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"/>

        <TextView
            android:id="@+id/val_spec_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"

            android:textColor="@color/secondary_text"
            android:textSize="@dimen/field_font"

            android:text=" mi"/>
    </LinearLayout>

    <View
        android:id="@+id/contentSep"
        android:layout_width="fill_parent"
        android:layout_below="@+id/info"
        android:layout_height="1dip"
        android:background="@color/divider" />
</RelativeLayout>
