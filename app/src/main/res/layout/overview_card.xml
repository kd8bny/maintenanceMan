<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carPic"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:scaleType="fitCenter"
            android:gravity="start"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:src="@drawable/ic_action_car_main"
            android:tint="@color/color_accent"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/horLine"
            android:text="Year"

            android:gravity="end"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:textColor="@color/color_primary"
            android:textSize="45sp"/>

        <View
            android:id="@+id/horLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/carPic"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horLine"
            android:text="make"
            android:gravity="start"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/header_horizontal_margin"
            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horLine"
            android:layout_centerHorizontal="true"
            android:text="model"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="engine"
            android:gravity="end"
            android:layout_below="@+id/horLine"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/header_vertical_margin"
            android:layout_marginEnd="@dimen/header_horizontal_margin"
            android:layout_marginBottom="@dimen/header_vertical_margin"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
