<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_vertical_space"
        android:textSize="@dimen/header_font"
        android:background="@color/primary"
        android:textColor="@color/header"

        android:text="@string/title_firebase_auth"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="@dimen/content_vertical_space"
        android:layout_centerInParent="true"

        android:textSize="@dimen/field_font"
        android:textColor="@color/secondary_text"

        android:text="@string/message_firebase_auth"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:padding="@dimen/content_vertical_space"

        android:hint="@string/hint_firebase_email"
        android:maxLines="1"

        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/accent"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/hint_firebase_email"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:padding="@dimen/content_vertical_space"

        android:inputType="textPassword"
        android:hint="@string/hint_firebase_password"
        android:maxLines="1"

        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/accent"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/hint_firebase_password"/>

    <LinearLayout
        android:id="@+id/lin_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/title_firebase_sign_in"/>

        <Button
            android:id="@+id/button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/title_firebase_create_account"/>
    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/button_google_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_buttons"/>
</RelativeLayout>