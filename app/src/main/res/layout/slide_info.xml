<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_icon"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:gravity="start"
        android:paddingTop="@dimen/header_vertical_margin"
        android:paddingStart="@dimen/header_vertical_margin"
        android:src="@drawable/ic_action_up"/>

    <TextView
        android:id="@+id/slidebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/header_vertical_margin"
        android:gravity="center|top"
        android:text="Vehicle Info"
        android:textSize="40sp"
        android:paddingBottom="@dimen/header_vertical_margin"/>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/slidebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/info_cardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="true"/>
        </FrameLayout>

</RelativeLayout>