<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_field_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_font"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/spinner_field_type"
        android:id="@+id/linearLayout">

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/field_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Oil Change"

            app:baseColor="@color/primary_text"
            app:primaryColor="@color/accent"
            app:errorColor="@color/error"
            app:floatingLabel="highlight"
            app:floatingLabelText="hint"
            app:floatingLabelAlwaysShown="true"
            android:singleLine="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/field_val"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:ems="10"
            android:singleLine="true"
            android:hint="ex. 2000"

            app:baseColor="@color/primary_text"
            app:primaryColor="@color/accent"
            app:errorColor="@color/error"
            app:floatingLabel="highlight"
            app:floatingLabelText="hint"
            app:floatingLabelAlwaysShown="true"/>
    </LinearLayout>
</RelativeLayout>